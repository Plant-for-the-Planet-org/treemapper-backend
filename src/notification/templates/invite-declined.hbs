<!-- src/notifications/templates/invite-declined.hbs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Invitation Declined</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    .header {
      background-color: #E76F51;
      color: white;
      padding: 20px;
      text-align: center;
      border-radius: 5px 5px 0 0;
    }
    .content {
      padding: 20px;
      border: 1px solid #ddd;
      border-top: none;
      border-radius: 0 0 5px 5px;
    }
    .footer {
      margin-top: 20px;
      text-align: center;
      font-size: 12px;
      color: #999;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>Invitation Declined</h1>
  </div>
  <div class="content">
    <p>Hello {{inviterName}},</p>
    <p>The invitation you sent to <strong>{{memberEmail}}</strong> to join <strong>{{projectName}}</strong> has been declined.</p>
    <p>You can send another invitation at any time if needed.</p>
  </div>
  <div class="footer">
    <p>This email was sent automatically. Please do not reply to this email.</p>
  </div>
</body>
</html>